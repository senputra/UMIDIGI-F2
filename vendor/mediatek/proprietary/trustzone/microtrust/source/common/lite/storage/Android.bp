cc_binary {

    name: "istorageproxyd",

    vendor: true,

    srcs: [
        "proxy/ipc.c",
        "proxy/rpmb.c",
        "proxy/storage.c",
        "proxy/proxy.c",
    ],

    init_rc: [
        "proxy/microtrust.storage.file.rc",
        "proxy/microtrust.storage.rpmb.rc",
        "proxy/microtrust.storage.persist.rc",
        "proxy/microtrust.storage.proinfo.rc",
    ],

    proprietary: true,

    owner: "mtk",

    shared_libs: [
        "liblog",
        "libcutils",
    ],

    static_libs: [
        "libstorageinterface",
        "libtrusty",
    ],

    cflags: [
        "-Wall",
        "-Wextra",
        "-DPRO_NODE=\"/dev/block/platform/bootdevice/by-name/proinfo\"",
    ],
}

